.choice-col
  position: relative
  min-height: 1px

.trivia-choice
  width: 100%
  height: 150px
  background-repeat: no-repeat
  background-position: center
  background-size: 85%
  font-size: 70px
  line-height: 300px
  color: #fff
  margin: 2rem 0

  &.placeholder
    border-radius: 76px
    width: 152px
    height: 152px

.votes-number-wrapper
  height: 100%
  width: 100%
  position: relative

.votes-number
  position: absolute
  top: 50%
  width: 100%
  margin-top: -57px

  h1
    text-shadow: 0 0 5px rgba(0, 0, 0, .7)
    font-size: 72px
    pointer-events: none
